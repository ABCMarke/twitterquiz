<h1>Twitter Quiz / Trendster</h1>

<div id="quizModal" class="quizDialog"> 
  <a href="#close" title="Close" class="close">X</a>
  <h2>Quiz</h2>
  <p class='question' id='<%= @question.id %>'><strong><%= @question.body %></strong></p>
  <ul>
    <li class='answer' id='<%= @first["#{@question.parameter}"] %>'>
      <%= @first.name %> (@<%= @first.username %>)
    </li>
    <li class='answer' id='<%= @second["#{@question.parameter}"] %>'>
      <%= @second.name %> (@<%= @second.username %>)
    </li>
  </ul>
</div>

<h2>High Scores</h2>
<table class='scoreboard'>
  <tr>
    <th>User</th>
    <th>Score</th>
  </tr>
  <% @users.each do |u| %>
    <tr>
      <td><%= u.email %></td>
      <td><%= u.score %></td>
    </tr>
  <% end %>
</table>

<footer>
  <b>"Copyright: Alison, Aurora, Andy and Akin"</b>
</footer>

<p class='user' id='<%= current_user.id %>'></p>

<script type="text/javascript">
  var attr = '<%= @question.parameter %>'
  console.log(attr);
